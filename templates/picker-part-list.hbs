<section class="tab picker-{{tab.id}} flexcol {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
  <div class="standard-form scrollable">
    {{#each types as |type|}}
    <fieldset>
      <legend>{{#if type.icon}}<i class="{{type.icon}}"></i> {{/if}}{{type.label}}</legend>
      <div class="document-type-controls">
        <button type="button" class="icon" data-action="addAll" data-tooltip="{{localize "PICKER.ACTIONS.addAll"}}" aria-label="{{localize "PICKER.ACTIONS.addAll"}}">
          <i class="fa-solid fa-check-double"></i>
        </button>
        <button type="button" class="icon" data-action="removeAll" data-tooltip="{{localize "PICKER.ACTIONS.removeAll"}}" aria-label="{{localize "PICKER.ACTIONS.removeAll"}}">
          <i class="fa-solid fa-trash"></i>
        </button>
      </div>
      <div class="form-group">
        <div class="form-fields">
          <multi-select name="{{../tab.id}}.{{type.id}}">
            {{selectOptions type.options groups=type.groups}}
          </multi-select>
        </div>
      </div>
    </fieldset>
    {{else}}
    <p><i class="fa-solid fa-circle-info"></i> {{localize emptyLabel}}</p>
    {{/each}}
  </div>
</section>
